        "default": "Haircare"
      },
      {
        "type": "text",
        "id": "description_left",
        "label": "Description left text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
      },
      {
        "type": "text",
        "id": "btn_left_text",
        "label": "Button left text",
        "default": "SHOP NOW"
      }, {
        "type": "url",
        "id": "btn_left_url",
        "label": "Button left URL"
      }, {
        "type": "image_picker",
        "id": "image_right",
        "label": "Image right"
      }, {
        "type": "text",
        "id": "heading_right",
        "label": "Heading right text",
        "default": "Skincare"
      }, {
        "type": "text",
        "id": "description_right",
        "label": "Description right text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
      }, {
        "type": "text",
        "id": "btn_right_text",
        "label": "Button right text",
        "default": "SHOP NOW"
      }, {
        "type": "url",
        "id": "btn_right_url",
        "label": "Button right URL"
      }
    ],
    "presets": [],
    "disabled_on": {
      "groups": ["custom.popups"]
    }
  }
{% endschema %}